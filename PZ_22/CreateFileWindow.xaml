<Window x:Class="PZ_22.CreateFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZ_22"
        mc:Ignorable="d"
        Title="Новый файл"
        Height="120"
        Width="300"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Background="#FFD9FFF0">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите имя файла"/>
        <TextBox Name="fileNameTextBox" Grid.Row="1" HorizontalAlignment="Stretch"/>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Name="okButton" IsDefault="True" Click="okButton_Click" MinWidth="60" Content="OK"/>
            <Button Name="cancelButton" IsCancel="True" Click="cancelButton_Click" MinWidth="60" Content="Cancel" Margin="2,0,0,0"/>
        </WrapPanel>
    </Grid>
</Window>
